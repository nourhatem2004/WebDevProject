@model IEnumerable<WebDevProject.Models.Department>

@{
    ViewData["Title"] = "getallview";
}

<h1>Departments</h1>

<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dep_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.establish_date)
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dep_name)
            </td>
            <td>
                @item.establish_date.ToString("d") <!-- Format date as short date -->
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-warning btn-sm">Edit</a>
                <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-info btn-sm">Details</a>
                    @if (item.ID != 15)
                    {
                        <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger btn-sm">Delete</a>
                    }
            </td>
        </tr>
}
    </tbody>
</table>

<div>
    <a asp-action="Create" class="btn btn-success">Create New Department</a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info mt-3">
        No departments found.
    </div>
}